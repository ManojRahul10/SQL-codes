-------------------------------------------
Table: employees
-------------------------------------------

CREATE TABLE employees (
    emp_id INT PRIMARY KEY,
    emp_name VARCHAR(50),
    hire_date DATE,
    salary DECIMAL(10,2),
    department_id INT
);

